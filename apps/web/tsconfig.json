{
  "extends": "@packages/config/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
